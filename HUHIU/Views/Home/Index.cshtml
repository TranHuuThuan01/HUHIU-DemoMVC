@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f8ff;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .menu-container {
            width: 100%;
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .menu {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            background-color: #ffcc99;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .menu-item {
            font-size: 18px;
            padding: 15px 20px;
            color: #333;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            margin: 5px;
        }

            .menu-item:hover {
                background-color: #ff9966;
                color: white;
            }

            .menu-item:active {
                background-color: #ff6600;
            }

        .header-container {
            text-align: center;
            margin-top: 50px;
        }

            .header-container h1 {
                font-size: 3rem;
                color: #ff6600;
            }

            .header-container p {
                font-size: 1.25rem;
                color: #666;
            }
    </style>
</head>
<body>

    <div class="header-container">
        <h1 class="display-4">Welcome to Our Juice Bar</h1>
        <p>Explore our delicious juice options below.</p>
    </div>

    <div class="menu-container">
        <div class="menu">
            <a href="#" class="menu-item">Dưa Hấu</a>
            <a href="#" class="menu-item">Táo</a>
            <a href="#" class="menu-item">Sinh Tố Bơ</a>
            <a href="#" class="menu-item">Chanh Leo</a>
            <a href="#" class="menu-item">Dứa</a>
            <a href="#" class="menu-item">Cà Rốt</a>
            <a href="#" class="menu-item">Nho</a>
            <a href="#" class="menu-item">Cam</a>
            <a href="#" class="menu-item">Dưa Lưới</a>
            <a href="#" class="menu-item">Mâm Xôi</a>
            <a href="#" class="menu-item">Táo Xanh</a>
            <a href="#" class="menu-item">Quả Mâm Xôi</a>
            <a href="#" class="menu-item">Lựu</a>
            <a href="#" class="menu-item">Đào Đào</a>
        </div>
    </div>

</body>
</html>
